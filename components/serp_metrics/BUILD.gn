static_library("serp_metrics") {
  public = [
    "serp_classifier.h",
    "serp_metrics.h",
  ]

  sources = [
    "serp_classifier.cc",
    "serp_metrics.cc",
  ]

  public_deps = [
    "//base",
    "//brave/components/time_period_storage",
    "//url",
  ]

  deps = [
    ":features",
    ":prefs",
    "//brave/components/constants",
    "//components/prefs",
    "//components/search_engines",
  ]
}

static_library("prefs") {
  public = [
    "pref_names.h",
    "pref_registry.h",
  ]

  sources = [ "pref_registry.cc" ]

  deps = [ "//components/prefs" ]
}

static_library("features") {
  public = [ "serp_metrics_feature.h" ]

  sources = [ "serp_metrics_feature.cc" ]

  public_deps = [ "//base" ]
}

