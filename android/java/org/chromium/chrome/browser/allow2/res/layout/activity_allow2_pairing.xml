<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp"
    android:background="?android:attr/colorBackground">

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/allow2_pairing_title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        android:textColor="?android:attr/textColorPrimary" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="48dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/qr_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:visibility="gone">

        <FrameLayout
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:background="@drawable/bg_qr_code"
            android:padding="16dp">

            <ImageView
                android:id="@+id/qr_code_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:contentDescription="QR Code" />

        </FrameLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary"
        tools:text="Ask your parent to scan this" />

    <TextView
        android:id="@+id/instruction_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="32dp"
        android:textSize="14sp"
        android:textColor="?android:attr/textColorSecondary"
        android:gravity="center"
        tools:text="Open the Allow2 app on your parent's phone" />

    <LinearLayout
        android:id="@+id/pin_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:visibility="gone">

        <View
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/allow2_pairing_or_code"
            android:textSize="12sp"
            android:textColor="?android:attr/textColorSecondary" />

        <TextView
            android:id="@+id/pin_code_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textSize="32sp"
            android:textStyle="bold"
            android:letterSpacing="0.3"
            android:textColor="@color/allow2_primary"
            tools:text="1 2 3 4 5 6" />

    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/retry_button"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/allow2_retry"
        android:visibility="gone" />

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="12dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:text="@android:string/cancel" />

</LinearLayout>
